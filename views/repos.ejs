<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400&display=swap" rel="stylesheet">
    <title>Fyle Challenge</title>
    <link rel="stylesheet" href="/css/reposStyles.css">
</head>

<body>
    <h2>Fyle Challenge</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="profile-section profile-image-section">
                <img class="profile-image" src="<%= avatarUrl %>" alt="">
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-section">
                <h3><%= username %></h3>
                <h5><%= bio %></h5>
                <button class="visit-button"><a href="<%= url %>">Visit Profile</a></button>
            </div>
        </div>
    </div>

    <h4><%= username %>'s Github repos</h4>

    <% if (userRepos.length > 0) { %>
    <div class="row">
        <% userRepos.forEach(function(repo){ %>
        <div class="col-md-4 mb-2">
            <div class="card h-75">
                <h5 class="card-title"><%= repo.name %></h5>
                <div class="card-body">
                    <p class="card-text"> <a href="<%= repo.url %>">Visit Repo</a></p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <div class="page-change">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% for(let i = 1; i <= Math.ceil(userRepos.length / perPage); i++) { %>
            <li class="page-item <%= i === page ? 'active' : '' %>">
                <a class="page-link" href="/repos?page=<%= i %>&perPage=<%= perPage %>"><%= i %></a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>

    <% } else { %>
    <p>No repositories found.</p>
    <% } %>

    <br>


    <div id="loader" class="d-none">Loading...</div>

</body>

</html>